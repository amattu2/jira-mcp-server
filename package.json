{
  "name": "jira-mcp-server",
  "version": "1.0.0",
  "description": "A model context provider (MCP) server to provide context between a Jira ticket and the GitHub Copilot Chat prompt.",
  "type": "module",
  "bin": {
    "jira-mcp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest",
    "test:ci": "vitest --ci --runInBand --coverage"
  },
  "keywords": [
    "mcp",
    "jira",
    "copilot",
    "context",
    "provider",
    "jira",
    "ticket"
  ],
  "files": [
    "build"
  ],
  "author": "Alec M.",
  "license": "AGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.0",
    "@eslint/markdown": "^7.0.0",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  }
}
